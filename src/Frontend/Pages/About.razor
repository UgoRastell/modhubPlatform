@page "/about"
@using Frontend.Models
@inject ISnackbar Snackbar
@inject NavigationManager NavigationManager

<PageTitle>À propos - ModHub</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudPaper Class="pa-6 rounded-xl" Elevation="3" Style="background-color: #232634;">
        <MudText Typo="Typo.h4" Class="mb-4 text-white">À propos de ModHub</MudText>
        
        <MudDivider Class="my-6" />
        
        <MudGrid>
            <MudItem xs="12" md="6">
                <MudText Typo="Typo.h5" Class="mb-4 text-white">Notre mission</MudText>
                <MudText Typo="Typo.body1" Class="mb-6 text-white">
                    ModHub est né d'une passion pour les jeux vidéo et les mods qui les transforment. Notre mission est de créer
                    une plateforme qui rassemble la communauté de modding, facilite le partage de créations et valorise
                    le travail des développeurs de mods.
                </MudText>
                
                <MudText Typo="Typo.h5" Class="mb-4 text-white">Ce que nous offrons</MudText>
                <MudList T="string">
                    <MudListItem T="string" Icon="@Icons.Material.Filled.CheckCircle">
                        <MudText Class="text-white">Une plateforme sécurisée pour télécharger des mods vérifiés</MudText>
                    </MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.CheckCircle">
                        <MudText Class="text-white">Des outils pour les créateurs pour gérer et monetiser leurs créations</MudText>
                    </MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.CheckCircle">
                        <MudText Class="text-white">Une communauté active et passionnée de joueurs et créateurs</MudText>
                    </MudListItem>
                    <MudListItem T="string" Icon="@Icons.Material.Filled.CheckCircle">
                        <MudText Class="text-white">Un support technique et des tutoriels pour l'installation des mods</MudText>
                    </MudListItem>
                </MudList>
            </MudItem>
            
            <MudItem xs="12" md="6">
                <div class="d-flex justify-center align-center" style="height: 100%;">
                    <MudImage Src="/images/about-illustration.svg" Alt="ModHub Illustration" Class="my-6" Width="400" Height="300" ObjectFit="ObjectFit.Cover" />
                </div>
            </MudItem>
        </MudGrid>
        
        <MudDivider Class="my-6" />
        
        <MudText Typo="Typo.h5" Class="mb-4 text-white">Notre histoire</MudText>
        <MudText Typo="Typo.body1" Class="mb-6 text-white">
            Fondée en 2023, ModHub est issue de la collaboration d'une équipe de développeurs et passionnés de jeux vidéo.
            Face aux difficultés rencontrées pour trouver des mods de qualité et sécurisés, nous avons décidé de créer
            une plateforme dédiée qui répond aux besoins de la communauté.
        </MudText>
        
        <MudText Typo="Typo.body1" Class="mb-6 text-white">
            Aujourd'hui, ModHub continue de grandir et d'évoluer grâce aux retours de notre communauté. Notre objectif
            est de devenir la référence en matière de distribution et de découverte de mods pour tous les jeux vidéo.
        </MudText>
        
        <MudDivider Class="my-6" />
        
        <MudGrid>
            <MudItem xs="12" md="4">
                <MudPaper Class="pa-4 rounded-xl d-flex flex-column align-center" Elevation="0" Style="background-color: rgba(255, 255, 255, 0.05);">
                    <MudIcon Icon="@Icons.Material.Filled.ViewModule" Color="Color.Primary" Size="Size.Large" Class="mb-3" />
                    <MudText Typo="Typo.h6" Class="mb-2 text-center text-white">+10,000 Mods</MudText>
                    <MudText Typo="Typo.body2" Class="text-center text-white">Disponibles sur notre plateforme</MudText>
                </MudPaper>
            </MudItem>
            
            <MudItem xs="12" md="4">
                <MudPaper Class="pa-4 rounded-xl d-flex flex-column align-center" Elevation="0" Style="background-color: rgba(255, 255, 255, 0.05);">
                    <MudIcon Icon="@Icons.Material.Filled.Group" Color="Color.Secondary" Size="Size.Large" Class="mb-3" />
                    <MudText Typo="Typo.h6" Class="mb-2 text-center text-white">+50,000 Utilisateurs</MudText>
                    <MudText Typo="Typo.body2" Class="text-center text-white">Une communauté en pleine croissance</MudText>
                </MudPaper>
            </MudItem>
            
            <MudItem xs="12" md="4">
                <MudPaper Class="pa-4 rounded-xl d-flex flex-column align-center" Elevation="0" Style="background-color: rgba(255, 255, 255, 0.05);">
                    <MudIcon Icon="@Icons.Material.Filled.SportsEsports" Color="Color.Info" Size="Size.Large" Class="mb-3" />
                    <MudText Typo="Typo.h6" Class="mb-2 text-center text-white">+100 Jeux supportés</MudText>
                    <MudText Typo="Typo.body2" Class="text-center text-white">Et la liste s'agrandit chaque jour</MudText>
                </MudPaper>
            </MudItem>
        </MudGrid>
        
        <MudDivider Class="my-6" />
        
        <MudText Typo="Typo.h5" Class="mb-4 text-white">L'équipe</MudText>
        <MudGrid>
            <MudItem xs="12" sm="6" md="3">
                <MudCard Class="rounded-xl" Style="background-color: rgba(255, 255, 255, 0.05);">
                    <MudCardMedia Image="/images/team/founder1.jpg" Height="200" />
                    <MudCardContent>
                        <MudText Typo="Typo.h6" Class="text-white">Alexandre Martin</MudText>
                        <MudText Typo="Typo.body2" Class="text-white">Fondateur & CEO</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            
            <MudItem xs="12" sm="6" md="3">
                <MudCard Class="rounded-xl" Style="background-color: rgba(255, 255, 255, 0.05);">
                    <MudCardMedia Image="/images/team/founder2.jpg" Height="200" />
                    <MudCardContent>
                        <MudText Typo="Typo.h6" Class="text-white">Sophie Dubois</MudText>
                        <MudText Typo="Typo.body2" Class="text-white">CTO</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            
            <MudItem xs="12" sm="6" md="3">
                <MudCard Class="rounded-xl" Style="background-color: rgba(255, 255, 255, 0.05);">
                    <MudCardMedia Image="/images/team/founder3.jpg" Height="200" />
                    <MudCardContent>
                        <MudText Typo="Typo.h6" Class="text-white">Thomas Bernard</MudText>
                        <MudText Typo="Typo.body2" Class="text-white">Directeur Technique</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            
            <MudItem xs="12" sm="6" md="3">
                <MudCard Class="rounded-xl" Style="background-color: rgba(255, 255, 255, 0.05);">
                    <MudCardMedia Image="/images/team/founder4.jpg" Height="200" />
                    <MudCardContent>
                        <MudText Typo="Typo.h6" Class="text-white">Claire Moreau</MudText>
                        <MudText Typo="Typo.body2" Class="text-white">Responsable Communauté</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        </MudGrid>
        
        <MudDivider Class="my-6" />
        
        <div class="d-flex justify-center">
            <MudButton Href="/contact" 
                       Variant="Variant.Filled" 
                       Color="Color.Primary" 
                       Size="Size.Large" 
                       Class="mt-4 px-8">
                Nous contacter
            </MudButton>
        </div>
    </MudPaper>
</MudContainer>
