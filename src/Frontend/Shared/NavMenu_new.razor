@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<style>
    .nav-menu-container {
        background-color: #1e1e2d;
        height: 100%;
        display: flex;
        flex-direction: column;
    }
    
    .nav-section {
        padding: 8px 0;
    }
    
    .section-header {
        color: #a0a0c9;
        font-size: 14px;
        font-weight: 600;
        letter-spacing: 1px;
        padding: 10px 16px;
        text-transform: uppercase;
    }
    
    .nav-menu-logo {
        display: flex;
        justify-content: center;
        margin: 12px 0;
    }
    
    .menu-logo-icon {
        background: linear-gradient(45deg, #6157ff 0%, #ee49fd 100%);
        border-radius: 50%;
        padding: 10px;
        color: white;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .nav-link {
        display: flex;
        align-items: center;
        padding: 10px 16px;
        color: #c8c8db;
        transition: all 0.2s ease;
        text-decoration: none;
        margin: 2px 8px;
        border-radius: 8px;
        cursor: pointer;
    }
    
    .nav-link:hover {
        background-color: rgba(97, 87, 255, 0.1);
        color: white;
    }
    
    .nav-link.active {
        background-color: rgba(97, 87, 255, 0.15);
        color: white;
    }
    
    .nav-link-icon {
        margin-right: 12px;
        font-size: 20px;
        display: flex;
    }
    
    .nav-link-text {
        font-size: 14px;
    }
    
    .nav-group {
        cursor: pointer;
    }
    
    .community-group {
        padding-top: 8px;
    }
    
    .community-items {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.3s ease;
    }
    
    .community-expanded {
        max-height: 200px;
    }
    
    .arrow-icon {
        margin-left: auto;
        transition: transform 0.3s ease;
    }
    
    .arrow-rotated {
        transform: rotate(90deg);
    }
    
    .auth-prompt {
        padding: 16px;
        margin: 10px 0;
        border-top: 1px solid rgba(255, 255, 255, 0.06);
        border-bottom: 1px solid rgba(255, 255, 255, 0.06);
    }
    
    .auth-text {
        color: #a26cf8;
        margin-bottom: 16px;
        font-size: 14px;
        text-align: center;
    }
    
    .auth-button {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        padding: 12px;
        border-radius: 25px;
        margin-bottom: 10px;
        font-weight: 600;
        font-size: 14px;
        border: none;
        cursor: pointer;
        transition: all 0.2s ease;
    }
    
    .login-button {
        background-color: #00bcd5;
        color: white;
    }
    
    .login-button:hover {
        background-color: #00aac2;
        box-shadow: 0 0 15px rgba(0, 188, 213, 0.4);
    }
    
    .register-button {
        background-color: #fc5185;
        color: white;
    }
    
    .register-button:hover {
        background-color: #e84a7a;
        box-shadow: 0 0 15px rgba(252, 81, 133, 0.4);
    }
    
    .footer-section {
        margin-top: auto;
        padding: 8px 0;
    }
    
    .footer-link {
        display: flex;
        align-items: center;
        padding: 8px 16px;
        color: #8a8aa5;
        transition: all 0.2s ease;
        text-decoration: none;
        font-size: 13px;
    }
    
    .footer-link:hover {
        color: #a0a0c9;
    }
    
    .footer-icon {
        margin-right: 12px;
        font-size: 16px;
    }
    
    .button-icon {
        margin-right: 8px;
        font-size: 18px;
    }
    
    /* Icônes colorées */
    .home-icon { color: #00b7ff; }
    .mods-icon { color: #2ecc71; }
    .games-icon { color: #f39c12; }
    .premium-icon { color: #fc5185; }
    .community-icon { color: #9b59b6; }
</style>

@code {
    private bool isCommunityExpanded = false;
    
    private void ToggleCommunity()
    {
        isCommunityExpanded = !isCommunityExpanded;
    }
    
    private async Task LogoutUser()
    {
        await JSRuntime.InvokeVoidAsync("localStorage.removeItem", "authToken");
        await JSRuntime.InvokeVoidAsync("localStorage.removeItem", "refreshToken");
        NavigationManager.NavigateTo("/", true);
    }
}

<div class="nav-menu-container">
    <div class="nav-menu-logo">
        <div class="menu-logo-icon">
            <i class="fas fa-cog"></i>
        </div>
    </div>
    
    <div class="nav-section">
        <div class="section-header">EXPLORER</div>
        
        <a href="/" class="nav-link @(NavigationManager.Uri.EndsWith("/") ? "active" : "")">
            <span class="nav-link-icon home-icon">
                <i class="fas fa-home"></i>
            </span>
            <span class="nav-link-text">Accueil</span>
        </a>
        
        <a href="/catalog" class="nav-link @(NavigationManager.Uri.Contains("/catalog") ? "active" : "")">
            <span class="nav-link-icon mods-icon">
                <i class="fas fa-puzzle-piece"></i>
            </span>
            <span class="nav-link-text">Mods</span>
        </a>
        
        <a href="/games" class="nav-link @(NavigationManager.Uri.Contains("/games") ? "active" : "")">
            <span class="nav-link-icon games-icon">
                <i class="fas fa-gamepad"></i>
            </span>
            <span class="nav-link-text">Jeux supportés</span>
        </a>
        
        <a href="/payment" class="nav-link @(NavigationManager.Uri.Contains("/payment") ? "active" : "")">
            <span class="nav-link-icon premium-icon">
                <i class="fas fa-credit-card"></i>
            </span>
            <span class="nav-link-text">Premium</span>
        </a>
        
        <div class="nav-group">
            <div class="nav-link" @onclick="ToggleCommunity">
                <span class="nav-link-icon community-icon">
                    <i class="fas fa-users"></i>
                </span>
                <span class="nav-link-text">Communauté</span>
                <span class="arrow-icon @(isCommunityExpanded ? "arrow-rotated" : "")">
                    <i class="fas fa-chevron-right"></i>
                </span>
            </div>
            
            <div class="community-items @(isCommunityExpanded ? "community-expanded" : "")">
                <a href="/forums" class="nav-link">
                    <span class="nav-link-icon" style="margin-left: 10px;">
                        <i class="fas fa-comments"></i>
                    </span>
                    <span class="nav-link-text">Forums</span>
                </a>
                
                <a href="/faq" class="nav-link">
                    <span class="nav-link-icon" style="margin-left: 10px;">
                        <i class="fas fa-question-circle"></i>
                    </span>
                    <span class="nav-link-text">FAQ</span>
                </a>
            </div>
        </div>
    </div>
    
    <AuthorizeView>
        <Authorized>
            <div class="nav-section">
                <div class="section-header">MON ESPACE</div>
                
                <a href="/account/settings" class="nav-link">
                    <span class="nav-link-icon">
                        <i class="fas fa-cog"></i>
                    </span>
                    <span class="nav-link-text">Paramètres</span>
                </a>
                
                <div class="nav-link" @onclick="LogoutUser">
                    <span class="nav-link-icon" style="color: #e74c3c;">
                        <i class="fas fa-sign-out-alt"></i>
                    </span>
                    <span class="nav-link-text">Déconnexion</span>
                </div>
            </div>
            
            <AuthorizeView Roles="Creator">
                <Authorized>
                    <div class="nav-section">
                        <div class="section-header" style="color: #fc5185;">CRÉATEUR</div>
                        
                        <a href="/creator/dashboard" class="nav-link">
                            <span class="nav-link-icon" style="color: #fc5185;">
                                <i class="fas fa-chart-line"></i>
                            </span>
                            <span class="nav-link-text">Tableau de bord</span>
                        </a>
                        
                        <a href="/creator/mods" class="nav-link">
                            <span class="nav-link-icon" style="color: #fc5185;">
                                <i class="fas fa-cubes"></i>
                            </span>
                            <span class="nav-link-text">Mes mods</span>
                        </a>
                        
                        <a href="/creator/upload" class="nav-link">
                            <span class="nav-link-icon" style="color: #fc5185;">
                                <i class="fas fa-upload"></i>
                            </span>
                            <span class="nav-link-text">Publier un mod</span>
                        </a>
                    </div>
                </Authorized>
            </AuthorizeView>
            
            <AuthorizeView Roles="Admin">
                <Authorized>
                    <div class="nav-section">
                        <div class="section-header" style="color: #e74c3c;">ADMINISTRATION</div>
                        
                        <a href="/admin/dashboard" class="nav-link">
                            <span class="nav-link-icon" style="color: #e74c3c;">
                                <i class="fas fa-tachometer-alt"></i>
                            </span>
                            <span class="nav-link-text">Tableau de bord</span>
                        </a>
                        
                        <a href="/admin/users" class="nav-link">
                            <span class="nav-link-icon" style="color: #e74c3c;">
                                <i class="fas fa-users"></i>
                            </span>
                            <span class="nav-link-text">Utilisateurs</span>
                        </a>
                        
                        <a href="/admin/mods" class="nav-link">
                            <span class="nav-link-icon" style="color: #e74c3c;">
                                <i class="fas fa-puzzle-piece"></i>
                            </span>
                            <span class="nav-link-text">Mods</span>
                        </a>
                    </div>
                </Authorized>
            </AuthorizeView>
        </Authorized>
        <NotAuthorized>
            <div class="auth-prompt">
                <div class="auth-text">
                    Connectez-vous pour accéder à toutes les fonctionnalités
                </div>
                
                <a href="/login" class="auth-button login-button">
                    <span class="button-icon">
                        <i class="fas fa-sign-in-alt"></i>
                    </span>
                    CONNEXION
                </a>
                
                <a href="/register" class="auth-button register-button">
                    <span class="button-icon">
                        <i class="fas fa-user-plus"></i>
                    </span>
                    INSCRIPTION
                </a>
            </div>
        </NotAuthorized>
    </AuthorizeView>
    
    <div class="footer-section">
        <a href="/about" class="footer-link">
            <span class="footer-icon">
                <i class="fas fa-info-circle"></i>
            </span>
            À propos
        </a>
        
        <a href="/contact" class="footer-link">
            <span class="footer-icon">
                <i class="fas fa-envelope"></i>
            </span>
            Contact
        </a>
        
        <a href="/terms" class="footer-link">
            <span class="footer-icon">
                <i class="fas fa-gavel"></i>
            </span>
            Conditions d'utilisation
        </a>
    </div>
</div>
